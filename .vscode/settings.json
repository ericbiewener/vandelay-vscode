// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    ".serverless": true,
    ".vscode": false,
    "**/__pycache__": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.serverless": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/node_modules": true,
    "python": true,
    "yarn-error.log": true,
    "yarn.lock": true,
    "tests": false,
    "test-workspaces": false,
  },

  "settingsOnFire.toggle": {
    "Tests": {
      "on": {
        "_label": "Show",
        "files.exclude": {
          "tests": false,
          "test-workspaces": false,
        }
      },
      "off": {
        "_label": "Hide",
        "files.exclude": {
          "tests": true,
          "test-workspaces": true,
        }
      }
    },
  }
}
