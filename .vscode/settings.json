// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    ".serverless": true,
    ".vscode": false,
    "**/__pycache__": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.serverless": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/node_modules": true,
    "python": true,
    "yarn-error.log": true,
    "yarn.lock": true,
    "tests": false,
    "test-workspaces": false,
    "**/src/plugins/javascript": false,
    "**/src/plugins/python": true,
    "**/tests/js": false,
    "**/tests/py": true,
    "**/tests/typescript": false
  },

  "settingsOnFire.toggle": {
    "Tests": {
      "on": {
        "_label": "Show",
        "files.exclude": {
          "tests": false,
          "test-workspaces": false,
        }
      },
      "off": {
        "_label": "Hide",
        "files.exclude": {
          "tests": true,
          "test-workspaces": true,
        }
      }
    },
    "Language": {
      "on": {
        "_label": "Python",
        "files.exclude": {
          "**/src/plugins/javascript": true,
          "**/tests/js": true,
          "**/tests/typescript": true,
          "**/src/plugins/python": false,
          "**/tests/py": false,
        }
      },
      "off": {
        "_label": "JavaScript",
        "files.exclude": {
          "**/src/plugins/javascript": false,
          "**/tests/js": false,
          "**/tests/typescript": false,
          "**/src/plugins/python": true,
          "**/tests/py": true,
        }
      }
    }
  }
}
